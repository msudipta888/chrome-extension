{
    "manifest_version": 3,
  "name": "LinkedIn Auto Bot",
    "version": "1.0.0",
    "permissions": [
    "tabs", "scripting","storage"
  ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
     "icons": {
    "16": "icons/icq-16.png",
    "32": "icons/icq-32.png",
    "48": "icons/icq-48.png",
    "128": "icons/icq-128.png"
  },
    "content_scripts" :[
       {
         "matches": ["https://www.linkedin.com/feed/*"
],
          "js": ["content.js"],
         "css": ["style.css"]
       }
    ],
    "host_permissions": [
   "https://www.linkedin.com/feed/*"
  ]

}